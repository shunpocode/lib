{
  "compilerOptions": {
    "outDir": "./lib",
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": false, // Не генерируем .d.ts файлы на этом этапе
    "removeComments": true, // Удаляем комментарии из JS файлов
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "exclude": ["node_modules", "tests"],
  "include": ["./**/*.ts"]
}
